{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block title %}
  List
{% endblock %}

{% block content %}
  <div class="container">
    <div class="row new-board">
      <div class="col">
        <button type="button" class="btn btn-primary">New Board</button>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
          </tr>
        </thead>
        <tbody>
          {% for board in boards %}
            <tr>
              <th scope="row">{{ board.id }}</th>
              <td> {{ board.name }} </td>
              <td> {{ board.description }} </td>
            </tr>
          {% else %}
              <tr>
                <td colspan="3">No records</td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
    </div>
  </div>
{% endblock %}
